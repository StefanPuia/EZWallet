<!DOCTYPE html>
<html>
	<%- include("partials/head") %>
	<body>
		<%- include("partials/header") %>
		<script src="/public/js/records.js"></script>
		<main>
			<div class="container center">
				<h5>Records</h5>
				<div class="row">
					<div class="input-field col s5">
						<select id="sMonth">
							<option selected value='1'>January</option>
							<option value='2'>February</option>
							<option value='3'>March</option>
							<option value='4'>April</option>
							<option value='5'>May</option>
							<option value='6'>June</option>
							<option value='7'>July</option>
							<option value='8'>August</option>
							<option value='9'>September</option>
							<option value='10'>October</option>
							<option value='11'>November</option>
							<option value='12'>December</option>
						</select>
						<label for="textarea1">Month</label>
					</div>
					<div class="input-field col s5">
						<input id="sYear" type="number">
						<label for="textarea1">Year</label>
					</div>
					<div class="input-field col s2">
						<button id="sButton" class="waves-effect waves-light green accent-4 btn">Search</button>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s6">
						<input id="sText" type="text" placeholder="Start typing...">
						<label ></label>
					</div>
					<div class="input-field col s6">
						<select id="sCat">
							<option value="-1" selected>Select a category</option>
						</select>
						<label>Category</label>
					</div>
				</div>

				<div class="row">
					<div class="col s12">
						<h5>Results</h5>
						<ul id="recordList" class="collection left-align black-text">

						</ul>
					</div>
				</div>

			</div>
		</main>
	</body>
</html>
